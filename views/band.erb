<div class="content">

  <h2 class="content-title"><%= @band.name %></h2>

  <h3 class="content-table-heading">venues played</h3>

  <table class="content-table">
    <% @band.venues.each do |v| %>
      <tr>
        <td class="table_cell_venue_<%= v.id %>">
          <%= v.name %>
        </td>
        <td>
          <form class="remove_venue" action="/bands/<%= @band.id %>/venues/<%= v.id %>/remove" method="post">
            <input name="_method" type="hidden" value="delete">
            <button id="remove_venue_<%= v.id %>" type="submit" class="delete-button glyphicon glyphicon-trash">
          </form>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <form id="add-band-venue" class="add-venue" action="/bands/<%= @band.id %>/add_venue" method="post">
            <input type="text" name="name" placeholder="add venue">
        </form>
      </td>
      <td>
          <button form="add-band-venue" type="submit" name="submit">+</button>
      </td>
    </tr>
  </table>

</div>
