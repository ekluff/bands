<div class="content">

  <h2 class="content-title"><%= @venue.name %></h2>

  <form class="content-form" action="/venues/<%= @venue.id %>/delete" method="post">
    <input name="_method" type="hidden" value="delete">
    <button alt="delete venue" id="delete_venue_<%= @venue.id %>" type="submit" class="delete-button glyphicon glyphicon-trash"></button>
  </form>

  <button alt="edit venue" id="edit_venue_<%= @venue.id %>" class="edit-button glyphicon glyphicon-edit"></button>
  <form class="content-form edit-form" action="/venues/<%= @venue.id %>/edit" method="post">
    <input name="_method" type="hidden" value="patch">
    <input type="text" name="new_venue_name" placeholder="change venue name">
    <button alt="save edit" id="save_edit_venue_<%= @venue.id %>">+</button>
  </form>

  <h3 class="content-table-heading">bands played</h3>

  <table class="content-table">
    <% @venue.bands.each do |b| %>
      <tr>
        <td class="table_cell_band_<%= b.id %>">
          <%= b.name %>
        </td>
        <td class="form-td">
          <form class="button-form" action="/venues/<%= @venue.id %>/bands/<%= b.id %>/remove" method="post">
            <input name="_method" type="hidden" value="delete">
            <button id="remove_band_<%= b.id %>" type="submit" class="delete-button glyphicon glyphicon-trash"></button>
          </form>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <form id="add-venue-band" class="table-form" action="/venues/<%= @venue.id %>/add_band" method="post">
            <input type="text" id="new_venue_band_name" name="new_band_name" placeholder="add band">
        </form>
      </td>
      <td>
        <button form="button-form" type="submit" id="submit-new-band" name="submit-new-band">+</button>
      </td>
    </tr>
  </table>

</div>
